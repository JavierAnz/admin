---
import Analytics from "@vercel/analytics/astro";

if (Astro.url.searchParams.has("logout")) {
	Astro.cookies.delete("ofit_session", { path: "/" });
	Astro.cookies.delete("agencia_id", { path: "/" });
	return Astro.redirect("/login");
}
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/png" href="/logo.png" />
		<meta name="generator" content={Astro.generator} />
		<title>Ofit</title>
		<Analytics />
	</head>
	<body>
		<slot />
	</body>
</html>

<style>
	@import "tailwindcss";

	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
